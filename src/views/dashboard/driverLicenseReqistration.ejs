<main>

    <div class="container pt-3">

        <a href="/dashboard" class="btn btn-primary">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </a>

        <h2 class="font-weight-bold py-3">Submit driver license details</h2>

        <% if (typeof message !== "undefined") { %>
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <strong>Success!</strong> 
                <%= message %> 
            </div>
        <% } %>

        <form action="/dashboard/driver_reg" method="POST" enctype="multipart/form-data">

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Full Name</label>
                        <input type="text" name="full_name" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">State of origin</label>
                        <input type="text" name="state" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Local Government Origin</label>
                        <input type="text" name="local_gov_area" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Issue Date</label>
                        <input type="date" name="issue_date" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Expiry Date</label>
                        <input type="date" name="expiry_date" class="form-control" id="" required>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Date of Birth</label>
                        <input type="date" name="date_of_birth" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Blood group</label>
                        <input type="text" name="blood_group" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Vehicle Category</label>
                        <input type="text" name="vehicle_category" class="form-control" id="" required>
                    </div>
                    <div class="form-group">
                        <label for="">Upload Driver Licence Document</label>
                        <input type="file" name="driver_license_doc" class="form-control" id="" required>
                    </div>
                </div>

            </div>


            <div class="form-group">
                <button class="btn btn-primary">Submit Information</button>
            </div>
        </form>

    </div>

</main>
