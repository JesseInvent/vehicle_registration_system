<main>

    <div class="container pt-3">

        <a href="/dashboard" class="btn btn-primary">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </a>

        <h2 class="font-weight-bold py-3">Vehicle Registration</h2>

        <form action="">

            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Full Name</label>
                        <input type="text" name="full_name" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">Passport</label>
                        <input type="file" name="passport" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">Upload Custom Papers</label>
                        <input type="file" name="custom_papers" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">Means of Identification</label>
                        <input type="file" name="identification" class="form-control" id="">
                    </div>


                    <div class="form-group">
                        <label for="">Upload Insurance Papers</label>
                        <input type="file" name="insurance_papers" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">Upload Vehicle Image</label>
                        <input type="file" name="vehicle_image" class="form-control" id="">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Engine Number</label>
                        <input type="text" name="engine_number" class="form-control" id="">
                    </div>
                    
                    <div class="form-group">
                        <label for="">State</label>
                        <input type="text" name="state" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">LGA</label>
                        <input type="text" name="lga" class="form-control" id="">
                    </div>

                    <div class="form-group">
                        <label for="">Age</label>
                        <input type="number" name="age" class="form-control" id="">
                    </div>
                </div>

            </div>

            <div class="form-group">
                <button class="btn btn-primary">Submit Information</button>
            </div>

        </form>

    </div>

</main>